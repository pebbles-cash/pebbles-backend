# Environment Configuration Example
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the appropriate values for each environment

# Deployment Environment
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/pebbles
MONGODB_DATABASE=pebbles

# Authentication
JWT_SECRET=your-jwt-secret-here
AUTH_REDIRECT_URL=https://your-domain.com/auth/callback
PAYMENT_BASE_URL=https://your-domain.com

# Dynamic Integration (Development)
DYNAMIC_API_URL=https://api.dynamic.com
DYNAMIC_API_KEY=your-dynamic-dev-api-key
DYNAMIC_ENVIRONMENT_ID=your-dynamic-dev-environment-id
DYNAMIC_WEBHOOK_SECRET=your-dynamic-dev-webhook-secret

# Meld Integration (Development)
MELD_API_URL=https://api.meld.io
MELD_API_KEY=your-meld-dev-api-key
MELD_WEBHOOK_SECRET=your-meld-dev-webhook-secret

# Firebase Configuration (Optional)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_SERVICE_ACCOUNT_JSON=your-firebase-service-account-json

# Firebase Settings
SKIP_FCM_VALIDATION=false
FCM_VALIDATION_TIMEOUT=5000
ENABLE_FIREBASE_DEBUG=false

# Blockchain Configuration (Development)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your-project-id
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
ETHERSCAN_API_KEY=your-etherscan-api-key

# Optional: IP Info for geolocation
IPINFO_TOKEN=your-ipinfo-token

# Optional: AI Assistant Configuration
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229 